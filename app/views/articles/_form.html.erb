<div class="container mx-auto p-8">
  <%= form_with model: article, class: "max-w-lg mx-auto" do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :title, class: "form-input mt-1 block w-full" %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="text-red-500 mt-1"><%= message %></div>
      <% end %>
    </div>
    <div class="mb-4">
      <%= form.label :body, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_area :body, class: "form-textarea mt-1 block w-full" %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="text-red-500 mt-1"><%= message %></div>
      <% end %>
    </div>
    <div class="mb-4">
      <%= form.label :status, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.select :status, Visible::VALID_STATUSES, { selected: article.status || 'public' }, class: "form-select mt-1 block w-full" %>
    </div>
    <div>
      <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
